<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 欢迎昵称 -->
    <LinearLayout
        android:id="@+id/id_ll_nickname"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="欢迎："
            android:layout_marginTop="15px"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/id_tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nickname"
            android:layout_marginTop="15px"
            android:textSize="24sp" />

    </LinearLayout>

    <!-- 评价分 -->
    <LinearLayout
        android:id="@+id/id_ll_evaluatescore"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="评价"
            android:layout_marginTop="15px"
            android:textSize="24sp" />

        <RadioGroup
            android:id="@+id/rg_evaluatenum"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp" >

            <RadioButton
                android:id="@+id/rb_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10sp"
                android:text="1"/>

            <RadioButton
                android:id="@+id/rb_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10sp"
                android:text="2"/>

            <RadioButton
                android:id="@+id/rb_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10sp"
                android:checked="true"
                android:text="3"/>

            <RadioButton
                android:id="@+id/rb_four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10sp"
                android:text="4"/>

            <RadioButton
                android:id="@+id/rb_five"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10sp"
                android:text="5"/>

        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分"
            android:layout_marginTop="15px"
            android:textSize="24sp" />

    </LinearLayout>

    <!-- 评价内容 -->
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="评价内容："
            android:layout_marginTop="15px"
            android:textSize="24sp" />
    </LinearLayout>

    <!-- 评价内容 -->
    <LinearLayout
        android:id="@+id/id_ll_evaluatecontent"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/id_et_evaluatecontent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:minLines="5"
            android:maxLines="8"
            android:scrollbars="vertical"
            android:background="@android:drawable/edit_text"
            android:inputType="textMultiLine" />

    </LinearLayout>

    <!-- 提交按钮，提交评价 -->
    <LinearLayout
        android:id="@+id/id_ll_evaluatesubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/id_btn_evaluatesubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="提交"/>

    </LinearLayout>

</LinearLayout>
